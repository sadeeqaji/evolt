{
  "name": "Evolt-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "tsc -p tsconfig.json && yarn copy:abi",
    "copy:abi": "copyfiles -u 1 src/abi/*.json dist/",
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "create:topic": "tsx src/scripts/create-topic.ts",
    "create:vusd": "tsx src/scripts/create-usdc.ts",
    "mint:vusd": "tsx src/scripts/mint-vusd.ts",
    "transfer:vusd": "tsx src/scripts/transfer-vusd.ts",
    "transfer:usdc": "tsx src/scripts/transfer-usdc.ts",
    "check:smartcontract": "tsx src/scripts/check-safe.ts",
    "associate:escrow": "tsx src/scripts/associate-escrow.ts",
    "check:vusd": "tsx src/scripts/check-vusd-treasury.ts",
    "check:token": "tsx src/scripts/check-token.ts",
    "deploy:hedera": "tsx src/scripts/deploy.ts",
    "start:worker": "tsx src/worker.ts",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "coverage": "cat ./test/coverage/lcov.info | coveralls",
    "lint-staged": "lint-staged",
    "prepare": "husky install .husky",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-keys": "^4.10.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "@azure/storage-blob": "^12.28.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/redis": "^7.0.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/websocket": "^11.2.0",
    "@hashgraph/proto": "^2.23.0",
    "@hashgraph/sdk": "^2.74.0",
    "@sendgrid/mail": "^8.1.5",
    "@walletconnect/types": "^2.22.4",
    "axios": "^1.12.1",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.59.0",
    "dotenv": "^17.2.2",
    "ethers": "^6.15.0",
    "fastify": "^5.6.0",
    "fastify-cors": "^6.1.0",
    "fastify-env": "^2.2.0",
    "fastify-plugin": "^5.0.1",
    "fastify-swagger": "^5.2.0",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^10.2.0",
    "mongoose": "^8.18.1",
    "nanoid": "^5.1.6",
    "pino-pretty": "^13.1.1",
    "tweetnacl": "^1.0.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^8.0.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": ">=10.0.10",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.8.5",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "chai": "^5.1.2",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "forge-std": "foundry-rs/forge-std#v1.9.4",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "mocha": "^11.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "~5.8.0"
  }
}
